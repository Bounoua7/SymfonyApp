{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('./css/bootstrap.min.css') }}">
    <style>
        .centered-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .centered-container {
            padding: 50px;
            background-color: #f8f8f8;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 80%;
            max-width: 1000px;
            box-sizing: border-box;
        }

        .text-info {
            text-align: center;
        }

        .btn-container {
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="centered-content">
    
        <div class="centered-container">
            <h2 class="text-info">Adresse</h2>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ adresse.id }}</td>
                    </tr>
                    <tr>
                        <th>Rue</th>
                        <td>{{ adresse.rue }}</td>
                    </tr>
                    <tr>
                        <th>Code postal</th>
                        <td>{{ adresse.codePostal }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ adresse.ville }}</td>
                    </tr>
                    <tr>
                        <th>Pays</th>
                        <td>{{ adresse.pays }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="btn-container">
                <a href="{{ path('app_adresse_index') }}" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
                <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
            <br>
            {{ include('adresse/_delete_form.html.twig') }}
        </div>
      
    
    </div>
{% endblock %}
