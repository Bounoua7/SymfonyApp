{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('./css/bootstrap.min.css') }}">
    <style>
        body {
            background-color: rgb(240, 245, 245);
        }
        .center {
            text-align: center;
            color: #295e59;
        }
        .btn-success{
                        text-align: center;

        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">
        <div>
            <h1 class="center">Table des adresses</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rue</th>
                    <th>Code_postal</th>
                    <th>Ville</th>
                    <th>Pays</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td>{{ adresse.id }}</td>
                    <td>{{ adresse.rue }}</td>
                    <td>{{ adresse.codePostal }}</td>
                    <td>{{ adresse.ville }}</td>
                    <td>{{ adresse.pays }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_adresse_show', {'id': adresse.id}) }}">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        <a class="btn btn-warning" href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="btn-success">
        <a class="btn btn-success" href="{{ path('app_adresse_new') }}">
            <i class="fas fa-plus"></i> Create new
        </a>   </div>
    </div>
{% endblock %}
