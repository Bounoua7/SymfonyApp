{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
       .txt-center {
            display: flex;
            justify-content: center;
           
        }

        .table {
            background-color: #f8f8f8;
        }

       
    </style>
{% endblock %}

{% block body %}
    <div class="container">
       <div class="txt-center">
        <h2 class="text-info">Client index</h2>
        </div> 
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Mot_de_passe</th>
                     <th>Adresse</th>
                   
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.nom }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.motDePasse }}</td>
                  
                <td>{% if client.adresse %}
    <p>{{ client.adresse.rue }}, {{ client.adresse.codePostal }}, {{ client.adresse.ville }}, {{ client.adresse.pays }}</p>
{% else %}
    <p>Aucune adresse disponible pour ce client</p>
{% endif %}</td>
                
                   
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i>show</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-danger"><i class="fas fa-edit"></i>edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_client_new') }}" class="btn btn-success"><i class="fas fa-plus"></i>Create new</a>
    </div>
{% endblock %}
